<?xml version="1.0" encoding="UTF-8"?>
<window>
	<backgroundcolor>background</backgroundcolor>
	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="bg_alpha" time="0" condition="Player.HasMedia">Conditional</animation>
			<animation effect="fade" start="0" end="100" time="300" condition="Window.Previous(fullscreenvideo) | Window.Previous(startup)">WindowOpen</animation>
			<include>ColoredBackgroundImages</include>
		</control>
		<control type="image">
			<right>20</right>
			<top>20</top>
			<width>64</width>
			<height>64</height>
			<texture>insignia/logo.png</texture>
		</control>
		<control type="image">
			<right>104</right>
			<top>20</top>
			<width>64</width>
			<height>64</height>
			<texture>insignia/notify.png</texture>
		</control>
		<control type="group" id="5000599">
			<description>Busy spinner</description>
			<height>160</height>
			<top>25%</top>
			<left>50%</left>
			<visible>!Insignia.IsFetched()</visible>
			<control type="image">
				<top>160</top>
				<width>100</width>
				<height>100</height>
				<aspectratio aligny="center">keep</aspectratio>
				<texture colordiffuse="black">dialogs/extendedprogress/loading-back.png</texture>
			</control>
			<control type="image">
				<top>160</top>
				<width>100</width>
				<height>100</height>
				<aspectratio aligny="center">keep</aspectratio>
				<texture>dialogs/extendedprogress/loading.png</texture>
				<animation effect="rotate" center="auto" start="360" end="0" time="1500" loop="true" condition="true">Conditional</animation>
			</control>
		</control>
		<control type="label" id="5000666">
			<left>20</left>
			<top>20</top>
			<width>900</width>
			<height>64</height>
			<label>Registered Users: $INFO[Window(insignia).Property(RegisteredUsers)] Online Users: $INFO[Window(insignia).Property(OnlineUsers)] Games Supported: $INFO[Window(insignia).Property(GamesSupported)]</label>
			<shadowcolor>text_shadow</shadowcolor>
			<aligny>center</aligny>
			<visible>Integer.IsGreater(Container(5000).NumItems,0) | Container(5000).IsUpdating</visible>
		</control>
		<control type="label" id="5000666">
			<left>20</left>
			<top>20</top>
			<width>900</width>
			<height>64</height>
			<label>15301</label>
			<shadowcolor>text_shadow</shadowcolor>
			<aligny>center</aligny>
			<visible>Insignia.IsFetched() + !Integer.IsGreater(Container(5000).NumItems,0)</visible>
		</control>
